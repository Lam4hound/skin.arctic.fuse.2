<?xml version="1.0" encoding="UTF-8"?>
<fonts>

    <fontset id="Default" unicode="false">
        <include>Font_Default_Inter</include>
    </fontset>

    <fontset id="Default (Unicode)" unicode="true">
        <include content="Font_Default_Inter">
            <param name="font_bold">resource://resource.font.robotocjksc/Inter-Unicode-Bold.ttf</param>
            <param name="font_regular">resource://resource.font.robotocjksc/Inter-Unicode-Regular.ttf</param>
            <param name="font_light">resource://resource.font.robotocjksc/Inter-Unicode-Regular.ttf</param>
            <param name="style_light">light</param>
        </include>
    </fontset>

    <fontset id="Condensed (Classic)" unicode="false">
        <include>Font_Default</include>
    </fontset>

    <fontset id="Figtree (Experimental)" unicode="false">
        <include content="Font_Default">
            <param name="font_bold">Figtree-Bold.ttf</param>
            <param name="font_regular">Figtree-Regular.ttf</param>
            <param name="font_light">Figtree-Light.ttf</param>

            <param name="plot_linespacing_head">1.12</param>
            <param name="plot_linespacing_midi">1.43</param>
            <param name="plot_linespacing_main">1.11</param>
            <param name="plot_linespacing_mini">1.205</param>
            <param name="plot_linespacing_tiny">1.07</param>
        </include>
    </fontset>

    <fontset id="Outfit (Experimental)" unicode="false">
        <include content="Font_Default">
            <param name="font_bold">Outfit-Bold.ttf</param>
            <param name="font_regular">Outfit-Regular.ttf</param>
            <param name="font_light">Outfit-Light.ttf</param>
            <param name="plot_linespacing_head">1.053</param>
            <param name="plot_linespacing_midi">1.345</param>
            <param name="plot_linespacing_main">1.062</param>
            <param name="plot_linespacing_mini">1.148</param>
            <param name="plot_linespacing_tiny">1.04</param>
        </include>
    </fontset>

    <fontset id="Heebo (Hebrew)" unicode="false">
        <include content="Font_Default">
            <param name="font_bold">Heebo-Bold.ttf</param>
            <param name="font_regular">Heebo-Regular.ttf</param>
            <param name="font_light">Heebo-Light.ttf</param>

            <!-- Hint -->
            <param name="size_heavy_hint">14</param>
            <param name="size_light_hint">14</param>

            <!-- Tiny -->
            <param name="size_heavy_tiny">20</param>
            <param name="size_light_tiny">20</param>

            <!-- Mini -->
            <param name="size_heavy_mini">23</param>
            <param name="size_light_mini">23</param>

            <!-- Main -->
            <param name="size_heavy_main">27</param>
            <param name="size_light_main">27</param>
            <param name="size_heavy_main_x2">54</param>
            <param name="size_light_main_x2">54</param>

            <!-- Midi -->
            <param name="size_heavy_midi">31</param>
            <param name="size_light_midi">31</param>
            <param name="size_heavy_midi_x2">62</param>
            <param name="size_light_midi_x2">62</param>

            <!-- Head -->
            <param name="size_heavy_head">37</param>
            <param name="size_light_head">37</param>

            <!-- Huge -->
            <param name="size_heavy_huge">42</param>
            <param name="size_light_huge">42</param>
            <param name="size_heavy_huge_x2">84</param>
            <param name="size_light_huge_x2">84</param>

            <!-- Linespacing -->
            <param name="plot_linespacing_head">1.028</param>
            <param name="plot_linespacing_midi">1.275</param>
            <param name="plot_linespacing_main">1</param>
            <param name="plot_linespacing_mini">1.12</param>
            <param name="plot_linespacing_tiny">1.02</param>
        </include>
    </fontset>

</fonts>

